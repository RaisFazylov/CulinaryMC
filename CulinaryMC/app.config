<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<configSections>
		<section name="entityFramework"
                 type="System.Data.Entity.Internal.ConfigFile.EntityFrameworkSection, EntityFramework" />
	</configSections>

	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v6.0"/>
	</startup>

	<connectionStrings>
		<add name="ApplicationDbContext"
             connectionString="Server=(localdb)\MSSQLLocalDB;Database=MasterClassDatabase;Trusted_Connection=True;MultipleActiveResultSets=true;Connect Timeout=60;"
             providerName="System.Data.SqlClient" />
	</connectionStrings>

	<entityFramework>
		<providers>
			<provider invariantName="System.Data.SqlClient"
                      type="Microsoft.EntityFrameworkCore.SqlServer, Microsoft.EntityFrameworkCore.SqlServer" />
		</providers>
		<contexts>
			<context type="MasterClassManager.Models.ApplicationDbContext, MasterClassManager">
				<databaseInitializer type="System.Data.Entity.MigrateDatabaseToLatestVersion`2[[MasterClassManager.Models.ApplicationDbContext, MasterClassManager], [MasterClassManager.Migrations.Configuration, MasterClassManager]], EntityFramework" />
			</context>
		</contexts>
	</entityFramework>

	<runtime>
		<assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
			<dependentAssembly>
				<assemblyIdentity name="Microsoft.EntityFrameworkCore" publicKeyToken="adb9793829ddae60" culture="neutral" />
				<bindingRedirect oldVersion="0.0.0.0-6.0.0.0" newVersion="6.0.0.0" />
			</dependentAssembly>
		</assemblyBinding>
	</runtime>
</configuration>